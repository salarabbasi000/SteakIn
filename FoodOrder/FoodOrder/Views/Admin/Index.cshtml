
@{

    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div class="main">
    <div id="LoaderDiv" style="text-align:center;padding-top:100px;">
        <img src="http://gifimage.net/wp-content/uploads/2017/09/animated-loading-gif-transparent-background-6.gif">
        <div><h1>Loading...</h1></div>
    </div>
    <div id="content" style="display:none">

    </div>
</div>


@section scripts{
    <script type="text/javascript">
        var jobRequireCV = false;
        $(document).ready(function () {
            LoadMenuContent("/Admin/Dashboard");
        })

        function LoadMenuContent(link) {
            $("#content").hide();
            $("#LoaderDiv").show(100);
            $("#content").html();
            $.get(link, function (data) {
                $("#content").html(data);
                $("#LoaderDiv").hide();
                $("#content").show(100);
            })
        }
    </script>
}
